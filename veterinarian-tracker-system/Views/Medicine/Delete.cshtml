@model TuyetDang.MyVetTracer.Entity.Medicine

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Medicine";
}

<h2>Delete Medicine</h2>

<h4>Are you sure you want to delete this medicine?</h4>

<div>
    <strong>Name:</strong> @Model.MedName<br />
    <strong>Amount:</strong> @Model.Amount<br />
    <strong>Notice:</strong> @Model.Notice<br />
    <strong>Dose:</strong> @Model.Dose<br />
    <strong>Total:</strong> @Model.Total<br />
    <strong>Pet:</strong> @(Model.Pet != null ? Model.Pet.PetName : "N/A")<br />
    <strong>Veterinarian:</strong> @(Model.VetUser != null ? Model.VetUser.FullName : "N/A")<br />
</div>

<form asp-action="Delete" asp-controller="Medicine" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdMed" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="MedicineIndex" class="btn btn-secondary mt-3">Cancel</a>
</form>
