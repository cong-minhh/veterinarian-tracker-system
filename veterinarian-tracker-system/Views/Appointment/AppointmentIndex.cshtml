@model List<TuyetDang.MyVetTracer.Entity.Appointment>

@{
    Layout = "_AdminLayout";
}

<h2>Appointment Management</h2>
<div class="mb-3">
    <a href="@Url.Action("Create", "Appointment")" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Appointment
    </a>
</div>

<table class="table table-dark table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pet</th>
            <th>Veterinarian</th>
            <th>Time</th>
            <th>Is Confirmed</th>
            <th>Created Date</th>
            <th class="text-center" style="width: 100px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.IdAppointment</td>
                    <td>@(appt.Pet != null ? appt.Pet.PetName : "-")</td>
                    <td>@(appt.VetUser != null ? appt.VetUser.FullName : "-")</td>
                    <td>@appt.Time</td>
                    <td>@(appt.IsConfirmed == 1 ? "Yes" : "No")</td>
                    <td>@appt.CreatedAt</td>
                    <td class="text-center" style="width: 250px;">
                        <a href="@Url.Action("Edit", "Appointment", new { id = appt.IdAppointment })" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Appointment", new { id = appt.IdAppointment })"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this appointment?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No appointment found.</td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["SuccessMessage"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        window.onload = function () {
            var toastEl = document.getElementById('successToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        };
    </script>
}