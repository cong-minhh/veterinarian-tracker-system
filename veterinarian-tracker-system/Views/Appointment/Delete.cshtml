@model TuyetDang.MyVetTracer.Entity.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

@section Styles {
    <link rel="stylesheet" href="~/css/appointment.css" />
}

<h2>Delete Appointment</h2>

<h4>Are you sure you want to delete this appointment?</h4>

<div>
    <strong>Time:</strong> @Model.Time<br />
    <strong>Is Confirmed:</strong> @(Model.IsConfirmed == 1 ? "Yes" : "No")<br />
    <strong>Pet:</strong> @(Model.Pet != null ? Model.Pet.PetName : "N/A")<br />
    <strong>Veterinarian:</strong> @(Model.VetUser != null ? Model.VetUser.FullName : "N/A")<br />
</div>

<form asp-action="Delete" asp-controller="Appointment" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdAppointment" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="AppointmentsManagement" class="btn btn-secondary mt-3">Cancel</a>
</form>
