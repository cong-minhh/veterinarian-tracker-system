@model TuyetDang.MyVetTracer.Entity.Vaccine
@{
    ViewData["Title"] = "Assign Vaccine";
    Layout = "_AdminLayout";
    var pet = ViewBag.Pet as TuyetDang.MyVetTracer.Entity.Pet;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "VeterinarianDashboard")">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item"><a
                            href="@Url.Action("PetMedicalRecords", "VeterinarianDashboard", new { id = pet.IdPet })">Pet
                            Medical Records</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Assign Vaccine</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Pet Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(pet.Img))
                        {
                            <img src="@pet.Img" alt="@pet.PetName" class="img-fluid rounded-circle pet-avatar mb-3"
                                style="width: 100px; height: 100px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="pet-avatar-placeholder rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center bg-light"
                                style="width: 100px; height: 100px;">
                                <i class="fas fa-paw fa-3x text-secondary"></i>
                            </div>
                        }
                        <h5>@pet.PetName</h5>
                        <p class="text-muted">@pet.PetType (@pet.PetType)</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="info-item">
                                <span class="info-label">Age</span>
                                <span class="info-value">@(pet.Age) years</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="info-item">
                                <span class="info-label">Gender</span>
                                <span class="info-value">@pet.Sex</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="info-item">
                                <span class="info-label">Weight</span>
                                <span class="info-value">@pet.Weight kg</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="info-item">
                                <span class="info-label">Owner</span>
                                <span class="info-value">@pet.OwnerUser?.FullName</span>
                            </div>
                        </div>
                    </div>

                    @* <div class="info-item">
                    <span class="info-label">Special Notes</span>
                    <p class="info-value">@(string.IsNullOrEmpty(pet.SpecialNotes) ? "No special notes" :
                    pet.SpecialNotes)</p>
                    </div> *@
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Assign Vaccine</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignVaccine" method="post">
                        <input type="hidden" asp-for="IdPet" value="@pet.IdPet" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="VacName" class="form-label">Vaccine Name</label>
                                    <select asp-for="VacName" class="form-select" required>
                                        <option value="">Select a vaccine</option>
                                        @if (pet.PetType.ToLower() == "dog")
                                        {
                                            <option value="Rabies">Rabies</option>
                                            <option value="Distemper">Distemper (DHPP)</option>
                                            <option value="Bordetella">Bordetella (Kennel Cough)</option>
                                            <option value="Leptospirosis">Leptospirosis</option>
                                            <option value="Lyme Disease">Lyme Disease</option>
                                            <option value="Canine Influenza">Canine Influenza</option>
                                        }
                                        else if (pet.PetType.ToLower() == "cat")
                                        {
                                            <option value="Rabies">Rabies</option>
                                            <option value="FVRCP">FVRCP (Feline Viral Rhinotracheitis, Calicivirus,
                                                Panleukopenia)</option>
                                            <option value="FeLV">FeLV (Feline Leukemia Virus)</option>
                                            <option value="FIV">FIV (Feline Immunodeficiency Virus)</option>
                                            <option value="Bordetella">Bordetella</option>
                                        }
                                        else
                                        {
                                            <option value="Rabies">Rabies</option>
                                        }
                                        <option value="Other">Other (specify in notes)</option>
                                    </select>
                                    <span asp-validation-for="VacName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Dose" class="form-label">Dose</label>
                                    <input asp-for="Dose" class="form-control" required />
                                    <span asp-validation-for="Dose" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            @* <div class="col-md-6">
                            <div class="form-group">
                            <label asp-for="VaccinationDate" class="form-label">Vaccination Date</label>
                            <input asp-for="VaccinationDate" type="date" class="form-control"
                            value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="VaccinationDate" class="text-danger"></span>
                            </div>
                            </div> *@
                            @* <div class="col-md-6">
                            <div class="form-group">
                            <label asp-for="ValidityPeriod" class="form-label">Validity Period (months)</label>
                            <input asp-for="ValidityPeriod" type="number" class="form-control" value="12" required />
                            <span asp-validation-for="ValidityPeriod" class="text-danger"></span>
                            </div>
                            </div> *@
                        </div>

                        <div class="row mb-3">
                            @* <div class="col-md-6">
                            <div class="form-group">
                            <label asp-for="BatchNumber" class="form-label">Batch Number</label>
                            <input asp-for="BatchNumber" class="form-control" />
                            <span asp-validation-for="BatchNumber" class="text-danger"></span>
                            </div>
                            </div> *@
                            @* <div class="col-md-6">
                            <div class="form-group">
                            <label asp-for="Manufacturer" class="form-label">Manufacturer</label>
                            <input asp-for="Manufacturer" class="form-control" />
                            <span asp-validation-for="Manufacturer" class="text-danger"></span>
                            </div>
                            </div> *@
                        </div>

                        @* <div class="form-group mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                        </div> *@

                        @* <div class="form-group mb-3">
                        <div class="form-check">
                        <input asp-for="IsBooster" class="form-check-input" type="checkbox" id="isBooster" />
                        <label class="form-check-label" for="isBooster">
                        Is Booster Shot
                        </label>
                        </div>
                        </div> *@

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("PetMedicalRecords", "VeterinarianDashboard", new { id = pet.IdPet })"
                                class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to Medical Records
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-syringe me-1"></i> Assign Vaccine
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .info-item {
            margin-bottom: 10px;
        }

        .info-label {
            display: block;
            font-size: 0.8rem;
            color: #6c757d;
            font-weight: 500;
        }

        .info-value {
            font-weight: 500;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize SignalR connection
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .withAutomaticReconnect()
                .build();

            // Start the SignalR connection
            connection.start().catch(function (err) {
                console.error(err.toString());
            });

            // Custom validation for vaccine name
            $("#VacName").change(function () {
                if ($(this).val() === "Other") {
                    $("#Notes").attr("required", true);
                    $("#Notes").attr("placeholder", "Please specify the vaccine name here");
                } else {
                    $("#Notes").removeAttr("required");
                    $("#Notes").attr("placeholder", "");
                }
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}