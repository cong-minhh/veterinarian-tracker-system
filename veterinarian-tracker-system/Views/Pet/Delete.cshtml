@model TuyetDang.MyVetTracer.Entity.Pet

@{
    ViewData["Title"] = "Delete Pet";
}

<h2>Delete Pet</h2>

<h4>Are you sure you want to delete this pet?</h4>

<div>
    <strong>Pet Type:</strong> @Model.PetType<br />
    <strong>Pet Name:</strong> @Model.PetName<br />
    <strong>Age:</strong> @Model.Age<br />
    <strong>Sex:</strong> @Model.Sex<br />
    <strong>Weight:</strong> @Model.Weight<br />
    <strong>Height:</strong> @Model.Height<br />
    <strong>Identification:</strong> @Model.Identification<br />
    <strong>Owner Id:</strong> @Model.IdOwnerUser<br />
    <strong>Vet Id:</strong> @Model.IdVetUser<br />
    <strong>Image:</strong><br />
    @if (!string.IsNullOrEmpty(Model.Img))
    {
        <img src="@Model.Img" alt="Pet Image" style="height: 100px;" />
    }
    else
    {
        <p>No image</p>
    }
</div>

<form asp-action="Delete" asp-controller="Pet" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdPet" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="PetsManagement" class="btn btn-secondary mt-3">Cancel</a>
</form>
