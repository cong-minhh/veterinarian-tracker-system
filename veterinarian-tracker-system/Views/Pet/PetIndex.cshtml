@model List<TuyetDang.MyVetTracer.Entity.Pet>

@{
}

<h2>Pet Management</h2>
<div class="mb-3">
    <a href="@Url.Action("Create", "Pet")" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Pet
    </a>
</div>
<table class="table table-dark table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Avatar</th>
            <th>Pet Name</th>
            <th>Pet Type</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Weight</th>
            <th>Height</th>
            <th>Identification</th>
            <th>Owner</th>
            <th>Veterinarian</th>
            <th>Created Date</th>
            <th class="text-center" style="width: 100px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var pet in Model)
            {
                <tr>
                    <td>@pet.IdPet</td>
                    <td>
                        <img src="@pet.Img" alt="Pet Image" width="50" height="50" style="object-fit: cover; border-radius: 50%;" />
                    </td>
                    <td>@pet.PetName</td>
                    <td>@pet.PetType</td>
                    <td>@pet.Age</td>
                    <td>@pet.Sex</td>
                    <td>@pet.Weight</td>
                    <td>@pet.Height</td>
                    <td>@pet.Identification</td>
                    <td>@(pet.OwnerUser != null ? pet.OwnerUser.FullName : "-")</td>
                    <td>@(pet.VetUser != null ? pet.VetUser.FullName : "-")</td>
					<td>@pet.CreatedAt</td>
                    <td class="text-center" style="width: 250px;">
                        <a href="@Url.Action("Edit", "Pet", new { id = pet.IdPet })" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Pet", new { id = pet.IdPet })"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this pet?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" class="text-center">No pet found.</td>
            </tr>
        }
    </tbody>
</table>
