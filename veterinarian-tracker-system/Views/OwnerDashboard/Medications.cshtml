@model TuyetDang.MyVetTracer.Entity.Owner
@{
    ViewData["Title"] = "Medications & Vacs";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "OwnerDashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Medications & Vacs</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Medications & Vacs</h5>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs" id="medicationsTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="medications-tab" data-bs-toggle="tab" data-bs-target="#medications" type="button" role="tab" aria-controls="medications" aria-selected="true">
                                <i class="fas fa-pills me-2"></i>Medications
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="vaccines-tab" data-bs-toggle="tab" data-bs-target="#vaccines" type="button" role="tab" aria-controls="vaccines" aria-selected="false">
                                <i class="fas fa-syringe me-2"></i>Vacs
                            </button>
                        </li>
                    </ul>
                    
                    <div class="tab-content p-3 border border-top-0 rounded-bottom" id="medicationsTabContent">
                        <!-- Medications Tab -->
                        <div class="tab-pane fade show active" id="medications" role="tabpanel" aria-labelledby="medications-tab">
                            @if (Model.Pets != null && Model.Pets.SelectMany(p => p.Meds).Any())
                            {
                                <div class="accordion" id="medicationsAccordion">
                                    @foreach (var pet in Model.Pets.Where(p => p.Meds != null && p.Meds.Any()))
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading-med-@pet.IdPet">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-med-@pet.IdPet" aria-expanded="true" aria-controls="collapse-med-@pet.IdPet">
                                                    <div class="d-flex align-items-center w-100">
                                                        <div>
                                                            <strong>@pet.PetName</strong>
                                                            <span class="badge bg-info ms-2">@pet.Identification</span>
                                                        </div>
                                                        <div class="ms-auto">
                                                            <span class="badge bg-primary rounded-pill">@pet.Meds.Count() medications</span>
                                                        </div>
                                                    </div>
                                                </button>
                                            </h2>
                                            <div id="collapse-med-@pet.IdPet" class="accordion-collapse collapse show" aria-labelledby="heading-med-@pet.IdPet" data-bs-parent="#medicationsAccordion">
                                                <div class="accordion-body p-0">
                                                    <div class="table-responsive">
                                                        <table class="table table-hover mb-0">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>Medication</th>
                                                                    <th>Dose</th>
                                                                    <th>Instructions</th>
                                                                    <th>Prescribed By</th>
                                                                    <th>Remaining</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var medicine in pet.Meds.OrderByDescending(m => m.IdMed))
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            <strong>@medicine.MedName</strong>
                                                                        </td>
                                                                        <td>@medicine.Dose</td>
                                                                        <td>@medicine.Notice</td>
                                                                        <td>
                                                                            @if (medicine.VetUser != null)
                                                                            {
                                                                                <span>Dr. @medicine.VetUser.FullName</span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="text-muted">Unknown</span>
                                                                            }
                                                                        </td>
                                                                        <td>
                                                                            @{
                                                                                var remaining = medicine.Total - medicine.Amount;
                                                                                var percentRemaining = (int)(remaining * 100.0 / medicine.Total);
                                                                                var badgeClass = percentRemaining > 50 ? "bg-success" : 
                                                                                                percentRemaining > 20 ? "bg-warning" : "bg-danger";
                                                                            }
                                                                            <div class="d-flex align-items-center">
                                                                                <div class="progress flex-grow-1 me-2" style="height: 8px;">
                                                                                    <div class="progress-bar @badgeClass" role="progressbar" style="width: @percentRemaining%" 
                                                                                         aria-valuenow="@percentRemaining" aria-valuemin="0" aria-valuemax="100"></div>
                                                                                </div>
                                                                                <span class="badge @badgeClass">@remaining/@medicine.Total</span>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-pills fa-3x text-muted mb-3"></i>
                                    <h6>No medications assigned</h6>
                                    <p class="text-muted">Your pets' medications will appear here when prescribed by a veterinarian</p>
                                </div>
                            }
                        </div>
                        
                        <!-- Vacs Tab -->
                        <div class="tab-pane fade" id="vaccines" role="tabpanel" aria-labelledby="vaccines-tab">
                            @if (Model.Pets != null && Model.Pets.SelectMany(p => p.Vacs).Any())
                            {
                                <div class="accordion" id="vaccinesAccordion">
                                    @foreach (var pet in Model.Pets.Where(p => p.Vacs != null && p.Vacs.Any()))
                                    {
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading-vac-@pet.IdPet">
                                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-vac-@pet.IdPet" aria-expanded="true" aria-controls="collapse-vac-@pet.IdPet">
                                                    <div class="d-flex align-items-center w-100">
                                                        <div>
                                                            <strong>@pet.PetName</strong>
                                                            <span class="badge bg-info ms-2">@pet.Identification</span>
                                                        </div>
                                                        <div class="ms-auto">
                                                            <span class="badge bg-primary rounded-pill">@pet.Vacs.Count() vaccines</span>
                                                        </div>
                                                    </div>
                                                </button>
                                            </h2>
                                            <div id="collapse-vac-@pet.IdPet" class="accordion-collapse collapse show" aria-labelledby="heading-vac-@pet.IdPet" data-bs-parent="#vaccinesAccordion">
                                                <div class="accordion-body p-0">
                                                    <div class="table-responsive">
                                                        <table class="table table-hover mb-0">
                                                            <thead class="table-light">
                                                                <tr>
                                                                    <th>Vaccine</th>
                                                                    <th>Date</th>
                                                                    <th>Dose</th>
                                                                    <th>Administered By</th>
                                                                    <th>Status</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var vaccine in pet.Vacs.OrderByDescending(v => v.Date))
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            <strong>@vaccine.VacName</strong>
                                                                        </td>
                                                                        <td>@vaccine.Date.ToString("MMM dd, yyyy")</td>
                                                                        <td>@vaccine.Dose</td>
                                                                        <td>
                                                                            @if (vaccine.Veterinarian != null)
                                                                            {
                                                                                <span>Dr. @vaccine.Veterinarian.VeterinarianName</span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="text-muted">Unknown</span>
                                                                            }
                                                                        </td>
                                                                        <td>
                                                                            @{
                                                                                var daysAgo = (DateTime.Now - vaccine.Date).TotalDays;
                                                                                var nextDue = vaccine.Date.AddMonths(12); // Assuming yearly vaccines
                                                                                var daysUntilDue = (nextDue - DateTime.Now).TotalDays;
                                                                            }
                                                                            
                                                                            @if (daysUntilDue <= 0)
                                                                            {
                                                                                <span class="badge bg-danger">Overdue</span>
                                                                            }
                                                                            else if (daysUntilDue <= 30)
                                                                            {
                                                                                <span class="badge bg-warning text-dark">Due soon</span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="badge bg-success">Up to date</span>
                                                                            }
                                                                            
                                                                            @if (daysUntilDue > 0)
                                                                            {
                                                                                <small class="text-muted d-block">Next due: @nextDue.ToString("MMM dd, yyyy")</small>
                                                                            }
                                                                            else
                                                                            {
                                                                                <small class="text-danger d-block">Overdue by @Math.Abs((int)daysUntilDue) days</small>
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-syringe fa-3x text-muted mb-3"></i>
                                    <h6>No vaccines recorded</h6>
                                    <p class="text-muted">Your pets' vaccine records will appear here</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Keep the active tab selected after page refresh
            var activeTab = localStorage.getItem('activeTab');
            if (activeTab) {
                $('#medicationsTab button[data-bs-target="' + activeTab + '"]').tab('show');
            }

            // Store the active tab in localStorage when changed
            $('#medicationsTab button').on('shown.bs.tab', function (e) {
                localStorage.setItem('activeTab', $(e.target).data('bs-target'));
            });
        });
    </script>
}