@{
    ViewBag.Title = "Đăng ký";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Đăng ký</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .register-container {
            max-width: 450px;
            margin: 40px auto;
            padding: 30px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

            .register-container h2 {
                font-weight: bold;
            }

        .form-control {
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .btn-register {
            width: 100%;
            background-color: #2d1e80;
            color: white;
            padding: 10px;
            border-radius: 30px;
            font-weight: bold;
        }

        .form-footer {
            margin-top: 15px;
            text-align: center;
        }

            .form-footer a {
                color: #725bff;
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body style="background-color: #f0f0f0;">
    <div class="register-container">
        <h2>Đăng ký</h2>
        <p>Welcome to us! Please enter your details.</p>

        <form asp-controller="Account" asp-action="Register" method="post">
            <label>Họ và tên *</label>
            <input type="text" class="form-control" name="FullName" required />

            <label>Email *</label>
            <input type="email" class="form-control" name="Email" required />

            <label>Mật khẩu *</label>
            <input type="password" class="form-control" name="Password" required />

            <label>Xác nhận mật khẩu *</label>
            <input type="password" class="form-control" name="ConfirmPassword" required />

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="accept" required>
                <label class="form-check-label" for="accept">
                    Tôi đã đọc <a href="#">quy định</a>
                </label>
            </div>

            <button type="submit" class="btn btn-register">Đăng ký</button>
        </form>

        <div class="form-footer">
            Bạn đã là thành viên? <a href="@Url.Action("Login", "Login")">Đăng nhập ngay!</a>
        </div>
    </div>
</body>
</html>
