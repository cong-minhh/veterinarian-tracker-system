@model MyVetTracer.Models.ResetPasswordForm

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="forgot-password-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="bi bi-envelope-exclamation text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Quên mật khẩu?</h2>
                            <p class="text-muted">Nhập email của bạn để nhận liên kết đặt lại mật khẩu</p>
                        </div>
                        
                        <form asp-action="ForgotPassword" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <label asp-for="Email">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Gửi liên kết đặt lại</button>
                            
                            <div class="text-center">
                                <p class="mb-0">Đã nhớ mật khẩu? <a asp-action="Login" class="text-decoration-none">Đăng nhập</a></p>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .forgot-password-container {
        margin: 40px auto;
        padding: 30px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .forgot-password-container h2 {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .forgot-password-container p {
        color: #666;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 8px;
        margin-bottom: 15px;
        padding: 10px;
    }

    .form-footer {
        text-align: center;
    }

    .form-footer a {
        color: #725bff;
        text-decoration: none;
    }

    .form-footer a:hover {
        text-decoration: underline;
    }
</style>