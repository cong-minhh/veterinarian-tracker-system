@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu";
}

<div class="reset-password-confirmation-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="fw-bold mb-3">Mật khẩu đã được đặt lại!</h2>
                        <p class="mb-4">Mật khẩu của bạn đã được đặt lại thành công. Bây giờ bạn có thể đăng nhập bằng mật khẩu mới.</p>
                        
                        <a asp-action="Login" class="btn btn-primary btn-lg px-5">Đăng nhập ngay</a>
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .reset-password-confirmation-container {
        max-width: 450px;
        margin: 40px auto;
        padding: 30px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        text-align: center;
    }

    .confirmation-icon {
        font-size: 3rem;
        color: #28a745;
        margin-bottom: 20px;
    }

    .reset-password-confirmation-container h2 {
        font-weight: bold;
        margin-bottom: 15px;
    }

    .reset-password-confirmation-container p {
        color: #666;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .form-footer {
        margin-top: 25px;
    }
</style>