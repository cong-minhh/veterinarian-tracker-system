@model TuyetDang.MyVetTracer.Entity.Owner

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Owner";
}

<h2>Delete Owner</h2>

<h4>Are you sure you want to delete this owner?</h4>

<div>
    <strong>Username:</strong> @Model.UserName<br />
    <strong>Full Name:</strong> @Model.FullName<br />
    <strong>Email:</strong> @Model.Email<br />
    <strong>Phone Number:</strong> @Model.PhoneNum<br />
    <strong>Gender:</strong> @Model.Gender<br />
    <strong>Dob:</strong> @Model.Dob?.ToString("yyyy-MM-dd")<br />
    <strong>Image:</strong><br />
    @if (!string.IsNullOrEmpty(Model.Img))
    {
        <img src="@Model.Img" alt="Owner Image" style="height: 100px;" />
    }
    else
    {
        <p>No image</p>
    }
</div>

<form asp-action="Delete" asp-controller="Owner" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdOwnerUser" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="OwnerIndex" class="btn btn-secondary mt-3">Cancel</a>
</form>
