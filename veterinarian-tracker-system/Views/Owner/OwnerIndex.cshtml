@model List<TuyetDang.MyVetTracer.Entity.Owner>

@{
    ViewData["Title"] = "Owner List";
}

<h2>Owners Management</h2>
<div class="mb-3">
    <a href="@Url.Action("Create", "Owner")" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create New Owner
    </a>
</div>
<table class="table table-dark table-bordered table-striped table-responsive">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Avatar</th>
            <th scope="col">User Name</th>
            <th scope="col">Full Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Gender</th>
            <th scope="col">Num of Pets</th>
            <th scope="col">Created Date</th>
            <th scope="col" class="text-center" style="width: 100px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var owner in Model)
            {
                <tr>
                    <td>@owner.IdOwnerUser</td>
                    <td>
                        <img src="@owner.Img" alt="Owner Image" width="50" height="50" style="object-fit: cover; border-radius: 50%;" />
                    </td>
                    <td>@owner.UserName</td>
                    <td>@owner.FullName</td>
                    <td>@owner.Email</td>
                    <td>@owner.PhoneNum</td>
                    <td>@(owner.Dob.HasValue ? owner.Dob.Value.ToString("yyyy-MM-dd") : "-")</td>
                    <td>@owner.Gender</td>
                    <td>@(owner.Pets != null ? owner.Pets.Count : 0)</td>
					<td>@owner.CreatedAt</td>
                    <td class="text-center" style="width: 250px;">
                        <a href="@Url.Action("Edit", "Owner", new { id = owner.IdOwnerUser })" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", "Owner", new { id = owner.IdOwnerUser })"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this owner?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center">No owner found.</td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["SuccessMessage"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        window.onload = function () {
            var toastEl = document.getElementById('successToast');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        };
    </script>
}