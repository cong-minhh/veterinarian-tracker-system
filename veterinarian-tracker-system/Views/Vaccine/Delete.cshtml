@model TuyetDang.MyVetTracer.Entity.Vaccine

@{
    ViewData["Title"] = "Delete Vaccine";
}

<h2>Delete Vaccine</h2>

<h4>Are you sure you want to delete this vaccine?</h4>

<div>
    <strong>Name:</strong> @Model.VacName<br />
    <strong>Date:</strong> @(Model.Date?.ToString("yyyy-MM-dd") ?? "N/A")<br />
    <strong>Dose:</strong> @Model.Dose<br />
    <strong>Total:</strong> @Model.Total<br />
    <strong>Pet:</strong> @(Model.Pet != null ? Model.Pet.PetName : "N/A")<br />
    <strong>Veterinarian:</strong> @(Model.VetUser != null ? Model.VetUser.FullName : "N/A")<br />
</div>

<form asp-action="Delete" asp-controller="Vaccine" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdVac" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="VaccineIndex" class="btn btn-secondary mt-3">Cancel</a>
</form>
