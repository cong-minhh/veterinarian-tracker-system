@model TuyetDang.MyVetTracer.Entity.Veterinarian

@{
    ViewData["Title"] = "Delete Veterinarian";
}

<h2>Delete Veterinarian</h2>

<h4>Are you sure you want to delete this veterinarian?</h4>

<div>
    <strong>Username:</strong> @Model.UserName<br />
    <strong>Full Name:</strong> @Model.FullName<br />
    <strong>Email:</strong> @Model.Email<br />
    <strong>Phone Number:</strong> @Model.PhoneNum<br />
    <strong>Clinic Name:</strong> @Model.NameOfConsultingRoom<br />
    <strong>Clinic Address:</strong> @Model.ClinicAddress<br />
    <strong>Qualification:</strong> @Model.Qualification<br />
    <strong>Experience:</strong> @Model.Experience<br />
    <strong>Authentication:</strong> @(Model.Authentication == 1 ? "Yes" : "No")<br />
    <strong>Image:</strong><br />
    @if (!string.IsNullOrEmpty(Model.Img))
    {
        <img src="@Model.Img" alt="Veterinarian Image" style="height: 100px;" />
    }
    else
    {
        <p>No image</p>
    }
</div>

<form asp-action="Delete" asp-controller="Veterinarian" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.IdVetUser" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="VeterinariansManagement" class="btn btn-secondary mt-3">Cancel</a>
</form>

