<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - VetTracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script src="~/js/sidebar.js"></script>
    <link href="~/css/sidebar.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

</head>
<body>
    <header class="header">
    </header>

    <div class="main-container d-flex">
        <div class="sidebar" id="side_nav">
            <div class="header-box px-2 pt-3 pb-4 d-flex justify-content-between">
                <h1 class="fs-4">
                    <span class="bg-white text-dark rounded shadow px-2 me-2">AD</span><span class="text-white">VetTracker</span>
                </h1>
            </div>

            <ul class="list-unstyled px-2">
                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                    <a href="@Url.Action("Index", "Admin")" class="text-decoration-none px-3 py-2 d-block">
                        Dashboard
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "VeterinarianIndex" ? "active" : "")">
                    <a href="@Url.Action("VeterinarianIndex", "Veterinarian")" class="text-decoration-none px-3 py-2 d-block">
                        Veterinarian
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "OwnerIndex" ? "active" : "")">
                    <a href="@Url.Action("OwnerIndex", "Owner")" class="text-decoration-none px-3 py-2 d-block">
                        Owner
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "PetIndex" ? "active" : "")">
                    <a href="@Url.Action("PetIndex", "Pet")" class="text-decoration-none px-3 py-2 d-block">
                        Pet
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "AppointmentIndex" ? "active" : "")">
                    <a href="@Url.Action("AppointmentIndex", "Appointment")" class="text-decoration-none px-3 py-2 d-block">
                        Appointment
                    </a>
                </li>                
                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "MedicineIndex" ? "active" : "")">
                    <a href="@Url.Action("MedicineIndex", "Medicine")" class="text-decoration-none px-3 py-2 d-block">
                        Medicine
                    </a>
                </li>

                <li class="@(ViewContext.RouteData.Values["action"].ToString() == "VaccineIndex" ? "active" : "")">
                    <a href="@Url.Action("VaccineIndex", "Vaccine")" class="text-decoration-none px-3 py-2 d-block">
                        Vaccine
                    </a>
                </li>
            </ul>
            <hr class="h-color mx-2">

            <ul class="list-unstyled px-2">
                <li class="">
                    <a href="#" class="text-decoration-none px-3 py-2 d-block">
                        Settings
                    </a>
                </li>
            </ul>

        </div>
        <div class="content">
            <nav class="navbar navbar-expand-md navbar-light bg-light">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between d-md-none d-block">
                        <button class="btn px-1 py-0 open-btn me-2"><i class="fal fa-stream"></i></button>
                        <a class="navbar-brand fs-4" href="#"><span class="bg-dark rounded px-2 py-0 text-white">CL</span></a>

                    </div>
                    <button class="navbar-toggler p-0 border-0" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fal fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarSupportedContent">
                        <form class="d-flex me-3" role="search">
                            <input class="form-control form-control-sm" type="search" placeholder="Search..." aria-label="Search">
                        </form>

                        <div class="d-flex align-items-center">
                            <img src="https://i.pinimg.com/736x/6d/ac/d4/6dacd4cf41a3637d021f0aba48de54fc.jpg"
                                 alt="Avatar"
                                 class="rounded-circle me-2"
                                 width="32"
                                 height="32"
                                 style="object-fit: cover;">
                            <span class="fw-bold">Admin</span>
                        </div>
                    </div>

                </div>
            </nav>

            <div class="dashboard-content px-3 pt-4">
                @RenderBody()

            </div>
        </div>
    </div>

    <footer class="bg-light border-top mt-5 py-4">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-start">
            <div class="d-flex align-items-center mb-3 mb-md-0">
                <img src="https://static.vecteezy.com/system/resources/previews/043/769/816/non_2x/book-logo-design-free-vector.jpg"
                     alt="Logo" style="width: 50px; height: auto;" class="me-3 rounded shadow-sm">
                <div>
                    <h6 class="mb-0 fw-bold">Group 15</h6>
                    <small class="text-muted">CSE 443 - .Net Programming</small>
                </div>
            </div>

            <div>
                <small class="text-muted">&copy; vet-tracker</small>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
